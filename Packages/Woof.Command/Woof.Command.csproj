<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup Label="Package metadata">
        <Title>Woof.Command</Title>
        <Version>9.0.0</Version>
        <PackageTags>woof;toolkit;shell;command;command-parser;cli</PackageTags>
        <PackageReleaseNotes>Targeting changed to .NET8.0 LTS.</PackageReleaseNotes>
        <Authors>Adam ≈Åyskawa</Authors>
        <Company>CodeDog</Company>
        <Description>A fully customizable command line interface / shell with built-in documentation, autocomplete and history features.</Description>
        <Copyright>(c)2025 CodeDog</Copyright>
        <PackageProjectUrl>https://github.com/HTD/Woof/tree/master/Packages/Woof.Command</PackageProjectUrl>
        <RepositoryUrl>https://github.com/HTD/Woof</RepositoryUrl>H
        <RepositoryType>git</RepositoryType>
        <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
        <IncludeSymbols>True</IncludeSymbols>
        <SignAssembly>True</SignAssembly>
        <AssemblyOriginatorKeyFile>..\..\..\CodeDog\Keys\Woof.snk</AssemblyOriginatorKeyFile>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageReadmeFile>Readme.md</PackageReadmeFile>
        <PackageIcon>Icon.png</PackageIcon>
    </PropertyGroup>

    <ItemGroup Label="Embedded files">
        <None Include="..\..\Icon.png" Pack="true" PackagePath="" />
        <None Include="Readme.md" Pack="true" PackagePath="" />
    </ItemGroup>

    <PropertyGroup Label="Project settings">
        <TargetFrameworks>net8.0;net9.0</TargetFrameworks>
        <ImplicitUsings>enable</ImplicitUsings>
        <DebugType>embedded</DebugType>
    </PropertyGroup>

    <PropertyGroup Label="Code quality">
        <Nullable>enable</Nullable>
        <GenerateDocumentationFile>True</GenerateDocumentationFile>
    </PropertyGroup>

    <PropertyGroup Label="Code quality: Release" Condition="'$(Configuration)'=='Release'">
        <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
    </PropertyGroup>

    <PropertyGroup>
      <BaseOutputPath>..\bin\</BaseOutputPath>
    </PropertyGroup>

</Project>