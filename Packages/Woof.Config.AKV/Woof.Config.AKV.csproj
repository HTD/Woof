<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup Label="Package metadata">
        <Title>Woof.Config.AKV</Title>
        <Version>6.2.0-alpha.10</Version>
        <PackageTags>woof;toolkit;configuration;settings;json;azure;key;vault;akv</PackageTags>
        <PackageReleaseNotes>Woof Toolkit 6.2 first release.</PackageReleaseNotes>
        <Authors>Adam ≈Åyskawa</Authors>
        <Company>CodeDog</Company>
        <Description>Adds Azure Key Vault secrets and credentials encryption support to Woof.Config.</Description>
        <Copyright>(c)2021 CodeDog</Copyright>
        <PackageProjectUrl>https://github.com/HTD/Woof/Woof.Template</PackageProjectUrl>
        <RepositoryUrl>https://github.com/HTD/Woof</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
        <IncludeSymbols>True</IncludeSymbols>
        <SignAssembly>True</SignAssembly>
        <AssemblyOriginatorKeyFile>D:\Source\Woof\Woof.snk</AssemblyOriginatorKeyFile>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageReadmeFile>Readme.md</PackageReadmeFile>
        <PackageIcon>Icon.png</PackageIcon>
    </PropertyGroup>

    <ItemGroup Label="Embedded files">
        <None Include="..\..\Icon.png" Pack="true" PackagePath="" />
        <None Include="Readme.md" Pack="true" PackagePath="" />
    </ItemGroup>

    <ItemGroup Label="System dependencies">
        <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="6.0.0" />
        <PackageReference Include="Azure.Identity" Version="1.5.0" />
        <PackageReference Include="Azure.Security.KeyVault.Secrets" Version="4.2.0" />
    </ItemGroup>

    <ItemGroup Label="Local dependencies" Condition="'$(Configuration)'=='Debug'">
        <ProjectReference Include="..\Woof.Config\Woof.Config.csproj" />
    </ItemGroup>

    <PropertyGroup Label="Project settings">
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <DebugType>embedded</DebugType>
    </PropertyGroup>

    <PropertyGroup Label="Code quality">
        <Nullable>enable</Nullable>
        <GenerateDocumentationFile>True</GenerateDocumentationFile>
    </PropertyGroup>

    <PropertyGroup Label="Code quality: Release" Condition="'$(Configuration)'=='Release'">
        <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
    </PropertyGroup>

</Project>
<!-- Make sure to update ALL the package metadata! -->