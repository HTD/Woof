<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup Label="Package metadata">
        <Title>Woof.Config</Title>
        <Version>6.2.0</Version>
        <PackageTags>woof;toolkit;configuration;json;settings</PackageTags>
        <PackageReleaseNotes>Woof Toolkit 6.2 first release.</PackageReleaseNotes>
        <Authors>Adam ≈Åyskawa</Authors>
        <Company>CodeDog</Company>
        <Description>Provides the application configuration with a JSON file located in either application or a user's home directory. Based on .NET 6.0 JsonNode. A replacement for the legacy application XML configuration files.</Description>
        <Copyright>(c)2021 CodeDog</Copyright>
        <PackageProjectUrl>https://github.com/HTD/Woof/Woof.Template</PackageProjectUrl>
        <RepositoryUrl>https://github.com/HTD/Woof</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
        <IncludeSymbols>True</IncludeSymbols>
        <SignAssembly>True</SignAssembly>
        <AssemblyOriginatorKeyFile>D:\Source\Woof\Woof.snk</AssemblyOriginatorKeyFile>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageReadmeFile>Readme.md</PackageReadmeFile>
        <PackageIcon>Icon.png</PackageIcon>
    </PropertyGroup>

    <ItemGroup Label="Embedded files">
        <None Include="..\..\Icon.png" Pack="true" PackagePath="" />
        <None Include="Readme.md" Pack="true" PackagePath="" />
    </ItemGroup>

    <ItemGroup Label="System dependencies">
        <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="6.0.0" />
    </ItemGroup>

    <PropertyGroup Label="Project settings">
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <DebugType>embedded</DebugType>
    </PropertyGroup>

    <PropertyGroup Label="Code quality">
        <Nullable>enable</Nullable>
        <GenerateDocumentationFile>True</GenerateDocumentationFile>
    </PropertyGroup>

    <PropertyGroup Label="Code quality: Release" Condition="'$(Configuration)'=='Release'">
        <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
    </PropertyGroup>

</Project>
<!-- Make sure to update ALL the package metadata! -->