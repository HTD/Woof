<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup Label="Package metadata">
        <Title>Woof.CronTimer</Title>
        <Version>9.0.0</Version>
        <PackageTags>woof;toolkit;cron;timer</PackageTags>
        <PackageReleaseNotes>Targeting changed to .NET8.0 LTS.</PackageReleaseNotes>
        <Authors>Adam ≈Åyskawa</Authors>
        <Company>CodeDog</Company>
        <Description>A very simple task scheduler using cron expressions to schedule events.
    - 5 fields format: [minute] [hour] [day of the month] [month] [day of the week].
    - 6 fields format: [second] [minute] [hour] [day of the month] [month] [day of the week].
    - The [year] field is NOT SUPPORTED.

Use ScheduledEvent.Data to pass additional information about the job to be done on the schedule.</Description>
        <Copyright>(c)2025 CodeDog</Copyright>
        <PackageProjectUrl>https://github.com/HTD/Woof/tree/master/Packages/Woof.CronTimer</PackageProjectUrl>
        <RepositoryUrl>https://github.com/HTD/Woof</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
        <IncludeSymbols>True</IncludeSymbols>
        <SignAssembly>True</SignAssembly>
        <AssemblyOriginatorKeyFile>..\..\..\CodeDog\Keys\Woof.snk</AssemblyOriginatorKeyFile>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageReadmeFile>Readme.md</PackageReadmeFile>
        <PackageIcon>Icon.png</PackageIcon>
    </PropertyGroup>

    <ItemGroup Label="Embedded files">
        <None Include="..\..\Icon.png" Pack="true" PackagePath="" />
        <None Include="Readme.md" Pack="true" PackagePath="" />
    </ItemGroup>

    <ItemGroup Label="System dependencies">
        <PackageReference Include="NCrontab.Signed" Version="3.3.3" />
    </ItemGroup>

    <PropertyGroup Label="Project settings">
        <TargetFrameworks>net8.0;net9.0</TargetFrameworks>
        <ImplicitUsings>enable</ImplicitUsings>
        <DebugType>embedded</DebugType>
    </PropertyGroup>

    <PropertyGroup Label="Code quality">
        <Nullable>enable</Nullable>
        <GenerateDocumentationFile>True</GenerateDocumentationFile>
    </PropertyGroup>

    <PropertyGroup Label="Code quality: Release" Condition="'$(Configuration)'=='Release'">
        <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
    </PropertyGroup>

    <PropertyGroup>
        <BaseOutputPath>..\bin\</BaseOutputPath>
    </PropertyGroup>

</Project>