<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup Label="Package metadata">
      <Title>Woof.Settings.AKV</Title>
      <Version>6.2.0</Version>
      <PackageTags>woof;toolkit</PackageTags>
      <PackageReleaseNotes>Woof Toolkit 6.2 first release.</PackageReleaseNotes>
      <Authors>Adam ≈Åyskawa</Authors>
      <Company>CodeDog</Company>
      <Description>Provides application settings in a JSON file with Azure Key Vault secrets access.</Description>
      <Copyright>(c)2022 CodeDog</Copyright>
      <PackageProjectUrl>https://github.com/HTD/Woof/Woof.Settings.AKV</PackageProjectUrl>
      <RepositoryUrl>https://github.com/HTD/Woof</RepositoryUrl>
      <RepositoryType>git</RepositoryType>
      <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
      <IncludeSymbols>True</IncludeSymbols>
      <SignAssembly>True</SignAssembly>
      <AssemblyOriginatorKeyFile>..\..\..\CodeDog\Keys\Woof.snk</AssemblyOriginatorKeyFile>
      <PackageLicenseExpression>MIT</PackageLicenseExpression>
      <PackageReadmeFile>Readme.md</PackageReadmeFile>
      <PackageIcon>Icon.png</PackageIcon>
  </PropertyGroup>

  <ItemGroup Label="Embedded files">
      <None Include="..\..\Icon.png" Pack="true" PackagePath="" />
      <None Include="Readme.md" Pack="true" PackagePath="" />
  </ItemGroup>

  <!-- Microsoft and 3rd party packages -->
  <ItemGroup Label="System dependencies">
      <PackageReference Include="Azure.Identity" Version="1.5.0" />
      <PackageReference Include="Azure.Security.KeyVault.Secrets" Version="4.2.0" />
  </ItemGroup>

  <!-- Local project references for Debug configuration only -->
  <ItemGroup Label="Local dependencies" Condition="'$(Configuration)'=='Debug'">
      <ProjectReference Include="..\Woof.Settings.Protected\Woof.Settings.Protected.csproj" />
  </ItemGroup>

  <!-- Published Woof Toolkit package dependencies for Release configuration only -->
  <ItemGroup Label="Package dependencies" Condition="'$(Configuration)'=='Release'">
  </ItemGroup>

  <PropertyGroup Label="Project settings">
      <TargetFramework>net6.0</TargetFramework>
      <ImplicitUsings>enable</ImplicitUsings>
      <DebugType>embedded</DebugType>
  </PropertyGroup>

  <PropertyGroup Label="Code quality">
      <Nullable>enable</Nullable>
      <GenerateDocumentationFile>True</GenerateDocumentationFile>
  </PropertyGroup>

  <PropertyGroup Label="Code quality: Release" Condition="'$(Configuration)'=='Release'">
      <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
  </PropertyGroup>

</Project>
<!-- Make sure to update ALL the package metadata! -->