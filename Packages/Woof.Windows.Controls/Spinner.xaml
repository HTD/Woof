<UserControl
    x:Class="Woof.Windows.Controls.Spinner"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    MaxWidth="150"
    MaxHeight="150"
    d:DesignHeight="50"
    d:DesignWidth="50"
    Visibility="Hidden"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Storyboard x:Key="A0">
            <DoubleAnimationUsingKeyFrames
                RepeatBehavior="Forever"
                Storyboard.TargetName="T0"
                Storyboard.TargetProperty="Angle">
                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="360" />
                <EasingDoubleKeyFrame KeyTime="0:0:2.8" Value="0">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <PowerEase EasingMode="EaseInOut" Power="1.3" />
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="0:0:2.8" Value="0" />
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="A1">
            <DoubleAnimationUsingKeyFrames
                RepeatBehavior="Forever"
                Storyboard.TargetName="T1"
                Storyboard.TargetProperty="Angle">
                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="13" />
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="13" />
                <EasingDoubleKeyFrame KeyTime="0:0:2.8" Value="-347">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <PowerEase EasingMode="EaseInOut" Power="1.3" />
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="0:0:2.8" Value="-347" />
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="A2">
            <DoubleAnimationUsingKeyFrames
                RepeatBehavior="Forever"
                Storyboard.TargetName="T2"
                Storyboard.TargetProperty="Angle">
                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="26" />
                <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="26" />
                <EasingDoubleKeyFrame KeyTime="0:0:2.8" Value="-334">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <PowerEase EasingMode="EaseInOut" Power="1.3" />
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="0:0:2.8" Value="-334" />
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="A3">
            <DoubleAnimationUsingKeyFrames
                RepeatBehavior="Forever"
                Storyboard.TargetName="T3"
                Storyboard.TargetProperty="Angle">
                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="39" />
                <EasingDoubleKeyFrame KeyTime="0:0:0.6" Value="39" />
                <EasingDoubleKeyFrame KeyTime="0:0:2.8" Value="-321">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <PowerEase EasingMode="EaseInOut" Power="1.3" />
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="0:0:2.8" Value="-321" />
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="A4">
            <DoubleAnimationUsingKeyFrames
                RepeatBehavior="Forever"
                Storyboard.TargetName="T4"
                Storyboard.TargetProperty="Angle">
                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="52" />
                <EasingDoubleKeyFrame KeyTime="0:0:0.8" Value="52" />
                <EasingDoubleKeyFrame KeyTime="0:0:2.8" Value="-308">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <PowerEase EasingMode="EaseInOut" Power="1.3" />
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="0:0:2.8" Value="-308" />
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </UserControl.Resources>
    <Grid>
        <Viewbox>
            <Canvas
                Width="50"
                Height="50"
                HorizontalAlignment="Left"
                VerticalAlignment="Top">
                <Path
                    Data="M50,27.5 C50,24.23333 45,24.23333 45,27.5 C45,30.83333 50,30.83333 50,27.5"
                    Fill="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=Foreground}"
                    RenderTransformOrigin="0.5,0.83333">
                    <Path.RenderTransform>
                        <RotateTransform x:Name="T0" Angle="0" />
                    </Path.RenderTransform>
                </Path>
                <Path
                    Data="M50,27.5 C50,24.23333 45,24.23333 45,27.5 C45,30.83333 50,30.83333 50,27.5"
                    Fill="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=Foreground}"
                    RenderTransformOrigin="0.5,0.83333">
                    <Path.RenderTransform>
                        <RotateTransform x:Name="T1" Angle="13" />
                    </Path.RenderTransform>
                </Path>
                <Path
                    Data="M50,27.5 C50,24.23333 45,24.23333 45,27.5 C45,30.83333 50,30.83333 50,27.5"
                    Fill="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=Foreground}"
                    RenderTransformOrigin="0.5,0.83333">
                    <Path.RenderTransform>
                        <RotateTransform x:Name="T2" Angle="26" />
                    </Path.RenderTransform>

                </Path>
                <Path
                    Data="M50,27.5 C50,24.23333 45,24.23333 45,27.5 C45,30.83333 50,30.83333 50,27.5"
                    Fill="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=Foreground}"
                    RenderTransformOrigin="0.5,0.83333">
                    <Path.RenderTransform>
                        <RotateTransform x:Name="T3" Angle="39" />
                    </Path.RenderTransform>
                </Path>
                <Path
                    Data="M50,27.5 C50,24.23333 45,24.23333 45,27.5 C45,30.83333 50,30.83333 50,27.5"
                    Fill="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=Foreground}"
                    RenderTransformOrigin="0.5,0.83333">
                    <Path.RenderTransform>
                        <RotateTransform x:Name="T4" Angle="52" />
                    </Path.RenderTransform>
                </Path>
            </Canvas>
        </Viewbox>
        <Viewbox>
            <Grid>
                <TextBlock
                    Margin="0"
                    Padding="8,0,8,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    FontSize="10"
                    FontWeight="Light"
                    Visibility="Hidden">
                    100%
                </TextBlock>
                <TextBlock
                    Name="PercentBox"
                    Margin="0"
                    Padding="8,6,8,8"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    FontSize="10"
                    FontWeight="Light"
                    Foreground="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=Foreground}">
                    <TextBlock
                        Name="PercentAmount"
                        Margin="0"
                        Padding="0"
                        FontSize="10"
                        FontWeight="Light"
                        Text="---"
                        TextAlignment="Right" />
                    %
                </TextBlock>
            </Grid>
        </Viewbox>
    </Grid>
</UserControl>